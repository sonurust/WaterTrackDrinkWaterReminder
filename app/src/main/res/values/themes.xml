<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.WaterTrack" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/navigation_background</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    
    <!-- Bottom Navigation Theme -->
    <style name="BottomNavigationTheme" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@drawable/bottom_navigation_background</item>
        <item name="itemIconTint">@color/navigation_icon_selected</item>
        <item name="itemTextColor">@color/navigation_icon_selected</item>
        <item name="android:elevation">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    
    <!-- Floating Action Button Theme -->
    <style name="FABTheme" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/fab_background</item>
        <item name="tint">@color/fab_icon</item>
        <item name="elevation">12dp</item>
        <item name="pressedTranslationZ">16dp</item>
        <item name="borderWidth">0dp</item>
    </style>
</resources>